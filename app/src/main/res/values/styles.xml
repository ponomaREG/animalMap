<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.AppCompat.Title.H1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.H3">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.ButtonAddAnimalFlowApply">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_round_corners</item>
    </style>

    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="background">@drawable/input_field_background</item>
        <item name="android:gravity">top</item>
    </style>
</resources>