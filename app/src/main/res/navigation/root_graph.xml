<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_graph"
    app:startDestination="@id/maps_fragment">

    <include app:graph="@navigation/add_animal_flow_graph" />

    <dialog
        android:id="@+id/detail_fragment"
        android:name="org.itmo.mop.animalmap.presentation.screen.detail.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="animalId"
            app:argType="integer" />
    </dialog>

    <fragment
        android:id="@+id/maps_fragment"
        android:name="org.itmo.mop.animalmap.presentation.screen.map.MapsFragment"
        tools:layout="@layout/fragment_maps">
        <action
            android:id="@+id/action_maps_fragment_to_add_flow_name"
            app:destination="@id/add_animal_flow_graph"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_maps_fragment_to_detail_fragment"
            app:destination="@id/detail_fragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>


</navigation>