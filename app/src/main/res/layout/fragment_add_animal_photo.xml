<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_begin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_end="16dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/add_animal_photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_begin"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.H1"
        android:text="Может фотографию?" />

    <FrameLayout
        android:id="@+id/animal_photo_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/add_animal_photo_picker_background"
        app:layout_constraintTop_toBottomOf="@id/add_animal_photo_title"
        app:layout_constraintBottom_toTopOf="@id/apply_button"
        app:layout_constraintStart_toStartOf="@id/guideline_begin"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        android:layout_marginVertical="20dp"
        android:elevation="3dp"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/animal_photo_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_animal_photo_title"
        app:layout_constraintBottom_toTopOf="@id/apply_button"
        app:layout_constraintStart_toStartOf="@id/guideline_begin"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        android:layout_marginVertical="20dp"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/animal_photo_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_begin"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constrainedWidth="true"
        android:theme="@style/Widget.MaterialComponents.Button.ButtonAddAnimalFlowApply"
        android:text="Далее" />

    <TextView
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/apply_button"
        app:layout_constraintStart_toStartOf="@id/guideline_begin"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/secondary"
        android:text="@string/skip_underline" />

</androidx.constraintlayout.widget.ConstraintLayout>