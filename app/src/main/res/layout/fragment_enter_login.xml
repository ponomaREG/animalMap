<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/enter_login_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.H1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:text="Введите логин"
        />

    <EditText
        android:id="@+id/enter_login_input_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/InputField"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="32dp"
        android:inputType="text"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/enter_login_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/error"
        app:layout_constraintStart_toStartOf="@id/enter_login_input_et"
        app:layout_constraintTop_toBottomOf="@id/enter_login_input_et"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        tools:text="Логин уже занят"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        android:theme="@style/Widget.MaterialComponents.Button.ButtonAddAnimalFlowApply"
        android:text="Далее" />

</androidx.constraintlayout.widget.ConstraintLayout>